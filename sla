import tkinter as tk
import customtkinter


def display():
    texto_capturado=input_.get()
    print(texto_capturado)
    texto.config(text=texto_capturado)





app = customtkinter.CTk()
janela  =  tk.Tk()
janela.geometry('1400x1024')
janela.configure(bg = 'black')

texto = tk.Label(janela, text = 'SISTEMA PARA SALVAR TEXTO', font=('arial', 20), fg = 'white', bg = 'black')
texto.pack(pady= 70)


input_ = tk.Entry(janela, font = ('arial', 20), bg = 'white', fg = 'black')
input_.pack(padx=20)

texto = tk.Label(janela, text = 'SEU TEXTO AQUI', font=('arial', 25), fg = 'white', bg = 'black')
texto.pack(pady= 25)


btn = customtkinter.CTkButton(janela, text = 'salvar texto', fg_color='red',corner_radius=25, command=display)
btn.pack(pady=30)



janela.mainloop()


